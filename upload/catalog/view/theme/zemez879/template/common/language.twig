{% if languages|length > 1 %} 
<div class="box-language">
	<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-language">
		<div class="btn-group toggle-wrap">
			<span class="toggle">
				<span class="hidden">{{ text_language ~ ':' }}</span>
				{% for language in languages %} 
				{% if (language['code'] == code) %} 
				<img width="16" height="11" src="catalog/language/{{ language['code'] }}/{{ language['code'] }}.png" alt="{{ language['name'] }}" title="{{ language['name'] }}">
				{{ language['name'] }} 
				{% endif %} 
				{% endfor %} 
				<i class="material-icons-keyboard_arrow_down"></i>
			</span>
			<ul class="toggle_cont toggle_cont__right">
				{% for language in languages %} 
				{% if (language['code'] == code) %} 
				<li>
					<button class="language-select selected" type="button" name="{{ language['code'] }}">
						<img width="16" height="11" src="catalog/language/{{ language['code'] }}/{{ language['code'] }}.png" alt="{{ language['name'] }}" title="{{ language['name'] }}" />
						{{ language['name'] }} 
					</button>
				</li>
				{% else %} 
				<li>
					<button class="language-select" type="button" name="{{ language['code'] }}">
						<img width="16" height="11" src="catalog/language/{{ language['code'] }}/{{ language['code'] }}.png" alt="{{ language['name'] }}" title="{{ language['name'] }}" />
						{{ language['name'] }} 
					</button>
				</li>
				{% endif %} 
				{% endfor %} 
			</ul>
		</div>
		<input type="hidden" name="code" value="" />
		<input type="hidden" name="redirect" value="{{ redirect }}" />
	</form>
</div>
{% endif %} 
